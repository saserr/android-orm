<resources>

    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="default_horizontal_margin">16dp</dimen>
    <dimen name="default_vertical_margin">16dp</dimen>

    <dimen name="small_horizontal_padding">8dp</dimen>

    <color name="holo_blue_dark">#ff0099cc</color>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/holo_blue_dark</item>
        <item name="background">@color/holo_blue_dark</item>
    </style>

    <style name="Text" parent="android:TextAppearance.DeviceDefault.Large" />

    <style name="List.Item" parent="Text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/small_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/small_horizontal_padding</item>
    </style>

    <style name="List.Item.Checked" parent="List.Item">
        <item name="android:checkMark">?android:attr/listChoiceIndicatorMultiple</item>
    </style>
</resources>
